notify-desktop -r "/tmp/vpn.notification.id" "" "<b>VPN</b> » UP"

sudo pkill openvpn

sudo openvpn \
  --verb 6 \
  --config projects/constructor.io/constructor.ovpn \
  --auth-user-pass projects/constructor.io/constructor.ovpn.auth &

disown

echo "nameserver 127.0.0.1
nameserver 77.88.8.8
nameserver 77.88.8.1
nameserver 8.8.8.8
nameserver 8.8.4.4
nameserver 172.30.1.53" | sudo tee /etc/resolv.conf

notify-desktop -r "/tmp/vpn.notification.id" "" "<b>VPN</b> » UP"
