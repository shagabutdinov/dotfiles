if [ -z "$1" ]; then
  notify-replace secret "" "<b>SECRET</b> » FAILED (no site provided)"
  exit
fi

notify-replace secret "" "<b>SECRET</b> » ..."

password=$(pwgen | head -n 1);
echo $password | xsel -ib;
echo $password;
cd ~/.secrets
echo "$password" | carcosa -Ac "$1/leonid@shagabutdinov.com"

notify-replace secret "" "<b>SECRET</b> » CREATED"
