{
  "workbench.activityBar.visible": true,
  "editor.fontSize": 18,
  "window.enableMenuBarMnemonics": false,
  "window.menuBarVisibility": "hidden",
  "editor.smoothScrolling": true,
  "editor.minimap.enabled": false,
  "breadcrumbs.enabled": false,
  "editor.rulers": [80, 120],
  "editor.wordWrap": "wordWrapColumn",
  "editor.wrappingIndent": "same",
  "editor.wordWrapColumn": 80,
  "keyboard.dispatch": "keyCode",
  "window.zoomLevel": 0,
  "editor.tabSize": 2,
  "workbench.editor.enablePreview": false,
  "files.trimTrailingWhitespace": true,
  "editor.formatOnSave": true,
  "editor.formatOnType": false,
  "editor.formatOnPaste": false,
  "editor.formatOnSaveTimeout": 5000, // use rubocop for formatting
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "typescript.updateImportsOnFileMove.enabled": "always",
  "ruby.useBundler": false, //run non-lint commands with bundle exec
  "ruby.useLanguageServer": true, // use the internal language server (see below)
  "ruby.lint": {
    "rubocop": {
      "useBundler": false // enable rubocop via bundler
    },
    "reek": {
      "useBundler": false // enable reek via bundler
    }
  },
  "ruby.format": "rubocop",
  "editor.codeActionsOnSave": {
    // For ESLint
    "source.fixAll.eslint": false,
    // For TSLint
    "source.fixAll.tslint": false,
    // For Stylelint
    "source.fixAll.stylelint": false
  },
  "ruby.codeCompletion": "rcodetools",
  "[ruby]": {
    "editor.defaultFormatter": "rebornix.ruby"
  },
  "emmet.triggerExpansionOnTab": true,
  "emmet.showExpandedAbbreviation": "never",
  "editor.acceptSuggestionOnEnter": "off",
  "editor.suggest.localityBonus": true,
  "javascript.updateImportsOnFileMove.enabled": "always",
  "editor.fontFamily": "Ubuntu Mono, Consolas, 'JetBrains Mono for Powerline', 'Droid Sans Mono', 'monospace', monospace, 'Droid Sans Fallback'",
  "githubPullRequests.showInSCM": true,
  "vscodeWorkspaceSwitcher.paths": ["/home/leo/projects/vscode"],
  "editor.renderIndentGuides": false,
  "workbench.sideBar.location": "right",
  "gitlens.currentLine.enabled": false,
  "gitlens.hovers.currentLine.over": "line",
  "gitlens.views.repositories.location": "gitlens",
  "gitlens.views.fileHistory.location": "gitlens",
  "gitlens.views.lineHistory.location": "gitlens",
  "gitlens.views.compare.location": "gitlens",
  "gitlens.views.search.location": "gitlens",
  "gitlens.codeLens.enabled": false,
  "gitlens.hovers.currentLine.enabled": false,
  "gitlens.hovers.annotations.enabled": false,
  "gitlens.hovers.enabled": false,
  "debug.onTaskErrors": "debugAnyway",
  "typescript.suggest.autoImports": false,
  "javascript.suggest.autoImports": false,
  "files.exclude": {
    ".history": true,
    ".git": true,
    "out": true
  },
  "search.exclude": {
    "**/.git": true,
    "**/.history": true
  },
  "search.followSymlinks": false,
  "search.maintainFileSearchCache": true,
  "search.smartCase": true,
  "search.useGlobalIgnoreFiles": true,
  "locations.extensions": {
    "shagabutdinov.blocks": true,
    "shagabutdinov.nesting": true,
    "shagabutdinov.locations-regexp": true
  },
  "context.debug": false,
  "context.extensions": {
    "shagabutdinov.nesting": true,
    "shagabutdinov.locations": true,
    "shagabutdinov.scope": true
  },
  "commands.extensions": {
    "shagabutdinov.locations": true
  },
  "tabnine.experimentalAutoImports": true,
  // "editor.defaultFormatter": "shagabutdinov.format"
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "cSpell.userWords": [
    "devtools",
    "formik",
    "prtodo",
    "reindent",
    "shagabutdinov",
    "subheadlines",
    "typeof"
  ],
  "[typescriptreact]": {
    "editor.defaultFormatter": "dbaeumer.vscode-eslint"
  },
  "workbench.colorTheme": "One Dark Pro",
  "rest-client.previewResponseInUntitledDocument": true,
  "rest-client.enableTelemetry": false,
  "editor.suggestSelection": "first",
  "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
  "devtools.snippets.exclude": ["typescript", "typescript.snippets.definitions"]
}
