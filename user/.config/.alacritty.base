font:
  normal:
    family: Ubuntu Mono
    style: Regular

  bold:
    family: Ubuntu Mono
    style: Bold

  italic:
    family: Ubuntu Mono
    style: Italic

  bold_italic:
    family: Ubuntu Mono
    style: Bold Italic

  size: 12

selection:
  save_to_clipboard: true

key_bindings:
  - { key: V,   mods: Alt, action: Paste }
  - { key: C,   mods: Alt, action: Copy  }
  - { key: Comma,   mods: Control, chars: "\x1b[23~" }
  - { key: Period,   mods: Control, chars: "\x1b[24~" }

